@model HW7_8.Models.Category

@{
    ViewBag.Title = "Add new category";
}

<div class="d-flex flex-column">
    <h1 class="display-4">@ViewBag.Title</h1>

    <form asp-controller="Category" asp-action="Add" method="post" class="form-horizontal">
        <div class="row required">
            <label asp-for="Name" class="form-label control-label"></label>
            <div>
                <input asp-for="Name" class="form-control" placeholder="Enter name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <input class="btn btn-success" type="submit" value="Add category" />
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Return</a>
        </div>
    </form>
</div>