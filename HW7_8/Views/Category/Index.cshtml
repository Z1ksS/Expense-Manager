@model IEnumerable<HW7_8.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<div class="align-self-center">
    <h1 class="display-4">@ViewBag.Title</h1>

    <a class="btn btn-primary" asp-controller="Category" asp-action="Add">Add category</a>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Action Item</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => category.Id)</td>
                    <td>@Html.DisplayFor(modelItem => category.Name)</td>
                    <td>
                        <div class="button-container">
                            <a class="btn btn-secondary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        </div>

                        <div class="button-container">
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" onsubmit="return confirmDelete(event)">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(event) {
        var confirmation = confirm("Are you sure you want to delete this category?");

        if (!confirmation) {
            event.preventDefault();
        }
    }
</script>
